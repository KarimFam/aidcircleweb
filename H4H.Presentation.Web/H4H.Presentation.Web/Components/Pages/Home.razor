@page "/"
@inject IOrderService OrderService
@inject IItemService ItemService
@inject IVolunteerService VolunteerService
@inject IWeatherService WeatherService
 
<h3>Bulletin Board</h3>

<div class="bulletin-board">
    <div class="board-section">
        <h4>Latest Orders (Last 7 Days)</h4>
        <OrdersComponent />
    </div>
    <div class="board-section">
        <h4>Latest Items (Last 7 Days)</h4>
        <ItemsComponent />
    </div>
    <div class="board-section">
        <h4>Online Volunteers</h4>
        <VolunteersComponent />
    </div>
    <div class="board-section">
        <h4>Local Weather - Tampa, FL</h4>
        <WeatherComponent />
    </div>
</div>

<style>
    .bulletin-board {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 20px;
    }
    .board-section {
        border: 1px solid #ccc;
        padding: 20px;
        border-radius: 5px;
    }
</style>
